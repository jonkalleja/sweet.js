{
  "name": "sweet.js",
  "description": "Hygienic Macros for JavaScript",
  "main": "dist/sweet.js",
  "bin": {
    "sjs": "bin/sjs"
  },
  "version": "2.2.1",
  "engines": {
    "node": ">5.0.0"
  },
  "author": "Tim Disney",
  "licenses": [
    {
      "type": "BSD",
      "url": "http://github.com/mozilla/sweet.js/master/LICENSE.BSD"
    }
  ],
  "browser": {
    "babel-core": false,
    "./build/src/node-module-loader.js": false,
    "./build/src/node-module-resolver.js": false
  },
  "scripts": {
    "clean": "rm -rf build",
    "lint": "eslint src && flow",
    "prebuild": "mkdir -p build/test build/sweet dist/",
    "build:src": "babel --out-dir build/src src",
    "build:browser": "webpack build/src/sweet.js --output-library-target amd --output-library sweet",
    "build": "npm run build:src",
    "test:curr": "ava build/test/modules/export.js",
    "test:smoke": "ava build/test/*.js !build/test/assertions.js",
    "test:full": "npm run build && ava",
    "test": "ava",
    "report": "nyc ava && nyc report --reporter=html",
    "docs": "asciidoctorjs doc/1.0/tutorial.adoc & asciidoctorjs doc/1.0/reference.adoc",
    "dist": "npm run build && npm run build:browser && npm run docs && cp build/src/*.js dist"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "sweet-spec": "sweet-js/sweet-spec",
    "babel-core": "^6.5.0",
    "immutable": "^3.7.4",
    "ramda": "^0.19.0",
    "ramda-fantasy": "^0.4.1",
    "resolve": "^1.1.7",
    "semver": "^5.3.0",
    "shift-codegen": "^4.0.0",
    "shift-js": "^0.2.1",
    "shift-parser": "^4.1.0",
    "shift-reducer": "^3.0.2",
    "shift-spidermonkey-converter": "^1.0.0",
    "transit-js": "^0.8.846",
    "utils-dirname": "^1.0.0",
    "yargs": "^4.3.2"
  },
  "devDependencies": {
    "asciidoctor-cli": "^1.5.2-alpha.3",
    "asciidoctor.js": "^1.5.4",
    "ava": "^0.17.0",
    "babel": "^6.5.0",
    "babel-cli": "^6.5.0",
    "babel-eslint": "^6.1.2",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-preset-node7": "1.4.0",
    "babel-register": "6.18.0",
    "eslint": "^2.11.1",
    "eslint-plugin-flowtype": "^2.11.4",
    "event-stream": "^3.3.2",
    "expect.js": "0.3.x",
    "flow-bin": "^0.36.0",
    "nyc": "^6.0.0",
    "source-map": "~0.5.3",
    "source-map-support": "^0.4.0",
    "webpack": "^1.13.1"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/mozilla/sweet.js.git"
  },
  "keywords": [
    "macros",
    "javascript"
  ],
  "license": "BSD-2-Clause",
  "ava": {
    "files": [
      "test/test-sweet-loader.js",
      "test/test-run-test262.js",
      "test/test-macro-expansion.js",
      "test/test-hygiene.js"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
